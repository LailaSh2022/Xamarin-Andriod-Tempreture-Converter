<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/tempreture_background01">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_lable"
        android:textColor="@color/abc_decor_view_status_guard_light"
        android:textSize="50px"
        android:layout_marginTop="21.5dp"
        android:layout_marginLeft="9.5dp"/>

    <EditText
        android:layout_width="178.5dp"
        android:layout_height="45dp"
        android:inputType="numberDecimal"
        android:id="@+id/Temp_Num"
        android:background="@drawable/textview_borderstyle"
        android:layout_marginTop="39.0dp"
        android:layout_marginLeft="9.5dp"
        android:hint="@string/Text_lable"
        android:padding="10dp"
        android:textSize="20dp"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/Tempreture_spr"
        android:prompt="@string/Temp_prompt"
        android:background="@drawable/textview_borderstyle"
        android:layout_marginTop="18.0dp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF1A237E"
        android:id="@+id/Convert_btn"
        android:text="@string/button_lable"
        android:layout_marginLeft="9.5dp"
        android:layout_marginTop="14.5dp" />

    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="178.5dp"
        android:layout_height="45.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/Result_txt"
        android:paddingBottom="@dimen/abc_action_bar_elevation_material"
        android:background="@drawable/textview_borderstyle"
        android:layout_marginTop="14.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="9.0dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal"
        android:typeface="normal"
        android:layout_marginBottom="0.0dp"
         />

</LinearLayout>